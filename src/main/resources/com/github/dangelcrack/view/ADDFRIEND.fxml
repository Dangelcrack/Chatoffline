<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.github.dangelcrack.controller.AddFriendController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Campo de texto para ingresar el nombre a buscar -->
    <TextField fx:id="searchTextField" layoutX="50.0" layoutY="30.0" prefWidth="300.0" promptText="Enter friend name" />

    <!-- Botón para realizar la búsqueda -->
    <Button fx:id="searchButton" layoutX="370.0" layoutY="30.0" text="Search"
            onAction="#handleSearchFriend" />

    <!-- ListView para mostrar la lista de usuarios disponibles -->
    <ListView fx:id="usersListView" layoutX="50.0" layoutY="80.0" prefHeight="300.0" prefWidth="500.0" />

</AnchorPane>
