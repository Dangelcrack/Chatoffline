<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.dangelcrack.controller.RegisterController">

    <!-- VBox centrado con anclajes -->
    <VBox alignment="CENTER" maxWidth="400.0" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <Label alignment="CENTER" prefHeight="35.0" prefWidth="145.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Register" />

            <HBox alignment="CENTER" spacing="10">
                <children>
                    <Label minWidth="80" text="Username:" />
                    <TextField fx:id="usernameField" promptText="Enter your username" />
                </children>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <children>
                    <Label minWidth="80" text="Password:" />
                    <PasswordField fx:id="passwordField" promptText="Enter your password" />
                </children>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <children>
                    <Button fx:id="registerButton" onAction="#handleRegister" prefWidth="100.0" text="Register" />
                    <Button fx:id="backButton" onAction="#handleBackToLogin" prefWidth="100.0" text="Back to Login" />
                </children>
            </HBox>
        </children>
        <padding>
            <Insets top="20.0" />
        </padding>
    </VBox>

</AnchorPane>
